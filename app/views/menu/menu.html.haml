%h1 Меню
%ul
- @menu_categories.each do |category|
  %li
    = category.title
    = link_to 'Редактировать', edit_menu_category_path(category), class: 'btn btn-default'
    = link_to 'Удалить', menu_category_path(category), :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: 'btn btn-danger'
    - if category.menu_items
      %ul
        - category.menu_items.each do |item|
          %li
            = item.title
            = link_to 'Редактировать', edit_menu_item_path(item), class: 'btn btn-default'
            = link_to 'Удалить', menu_item_path(item), :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: 'btn btn-danger'
%br
= link_to 'Добавить пункт основного меню', new_menu_category_path, class: 'btn btn-default'
= link_to 'Добавить пункт дочернего меню', new_menu_item_path, class: 'btn btn-default'