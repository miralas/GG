%h1 Listing news

%table
  %thead
    %tr
      %th Title
      %th Content
      %th Publish
      %th Image
      %th
      %th
      %th

  %tbody
    - @news.each do |news|
      %tr
        %td= news.title
        %td= news.content
        %td= news.publish
        %td= news.image
        %td= link_to 'Show', news
        %td= link_to 'Edit', edit_news_path(news)
        %td= link_to 'Destroy', news, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

