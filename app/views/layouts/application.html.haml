!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Gg2'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Gg2'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    :javascript
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '1669644663254564',
          xfbml      : true,
          version    : 'v2.4'
        });
      };

      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      / = render 'layouts/messages'
      - if request.env['PATH_INFO'] == root_path
        #slider.well{ style: 'width: 100%; height: 300px;' }
          Слайдер
      #content.pull-left
        = yield
      #sidebar.pull-right
        .panel.panel-default
          .panel-heading
            %h3 Новости
          .panel-body
            - if @company_news
              - @company_news.each do |news|
                %h4
                  = news.created_at.to_date
                  = news.title
                %hr.btn-danger
                %p
                  = news.body.truncate(30)
                  .pull-right
                    = link_to 'Подробнее', company_news_path(news), class: 'btn btn-default'
            - else
              %p На данный момент новостей нет.
        .panel.panel-default.pull-right{ style: 'width: 255px; height: 300px;' }
          баннер
      .clear{style: 'content: "", display: block; clear: both;'}
      #bottom.well{ style: 'width: 100%; height: 150px;'}
        Слайдер маленький
