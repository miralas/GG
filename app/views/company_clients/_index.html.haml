#result.panel.panel-default
  %ul.nav.nav-tabs
    %li
      = link_to 'Контакты', company_contacts_path, remote: true
    %li.active
      = link_to 'Клиенты', company_clients_path, remote: true
    %li
      = link_to 'Новости компании', company_news_index_path, remote: true
    %li
      = link_to 'Отзывы о компании', company_reviews_path, remote: true
    %li
      = link_to 'Комментарии', company_comments_path, remote: true

%table.table
  %thead
    %tr
      %th Название
      %th Сайт
      %th Описание
      %th{ colspan: 2 }

  %tbody.table-hover
    - if @company_clients
      - @company_clients.each do |company_client|
        %tr
          %td= company_client.title
          %td= company_client.website
          %td= company_client.description
          %td= link_to 'Посмотреть', company_client, class: 'btn btn-default'
          - if company.client.company == current_user
            %td= link_to 'Редактировать', edit_company_client_path(company_client), class: 'btn btn-default'
            %td= link_to 'Удалить', company_client, :method => :delete, :data => { :confirm => 'Вы уверены, что хотите удалить клиента?' }, class: 'btn btn-danger'

%br
- if @company_clients
  - if @company_clients.company.user == current_user
    = link_to 'Добавить клиента', new_company_client_path, class: 'btn btn-default'
